<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.MemberMapper">
	<insert id="insertMember" parameterType="mdto">
		insert into member (member_level,id,pw,pw_check,name,nickname,email,hp,member_img,gaipday) 
		values (#{member_level},#{id},#{pw},#{pw_check},#{name},#{nickname},#{email},#{hp},#{member_img},now())
	</insert>
	
	<select id="idCheck" parameterType="String" resultType="int">
		select count(*) from member where id = #{id}
	</select>
	
	<select id="nicknameCheck" parameterType="String" resultType="int">
		select count(*) from member where nickname = #{nickname}
	</select>
	
	<select id="existsById" parameterType="String" resultType="boolean">
		select if(count(*) > 0, 'true', 'false') from member where id = #{id, jdbcType=VARCHAR}
	</select>
</mapper>

